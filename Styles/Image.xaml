<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style TargetType="{x:Type Image}" x:Key="CanBeDisabledImageStyle">
		<Style.Triggers>
			<Trigger Property="IsEnabled" Value="False">
				<Setter Property="Opacity" Value="0.25" />
			</Trigger>
		</Style.Triggers>
	</Style>

    <Style TargetType="{x:Type Viewbox}" x:Key="CanBeDisabledViewboxStyle">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.25" />
            </Trigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <ControlTemplate x:Key="HorizontalToggle" TargetType="{x:Type Thumb}">
		<Grid>
            <Rectangle Height="9" Stroke="{DynamicResource GridSplitterBorderDark}" StrokeThickness="1" Stretch="Fill" Fill="{DynamicResource HorizontalToggleGradientColor}" />
            <Rectangle Margin="0,-2,0,0" Width="42" Height="1" Fill="{DynamicResource GridSplitterGripLight}"/>
            <Rectangle Margin="0,2,0,0" Width="42" Height="1" Fill="{DynamicResource GridSplitterGripDark}"/>
		</Grid>
	</ControlTemplate>

	<ControlTemplate x:Key="VerticalToggle" TargetType="{x:Type Thumb}">
		<Grid>
            <Rectangle Width="9" Stroke="{DynamicResource GridSplitterBorderDark}" StrokeThickness="1" Stretch="Fill" Fill="{DynamicResource VerticalToggleGradientColor}" />
            <Rectangle Margin="-2,0,0,0" Height="42" Width="1" Fill="{DynamicResource GridSplitterGripLight}"/>
            <Rectangle Margin="2,0,0,0" Height="42" Width="1" Fill="{DynamicResource GridSplitterGripDark}"/>
		</Grid>
	</ControlTemplate>
	
</ResourceDictionary>